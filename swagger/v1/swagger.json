{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/accounts": {
      "post": {
        "summary": "Creates an account",
        "tags": [
          "Accounts"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "account",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "tag_ids": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  }
                }
              },
              "required": [
                "name"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "account created"
          },
          "422": {
            "description": "invalid request"
          }
        }
      }
    },
    "/transactions": {
      "post": {
        "summary": "Creates a transaction",
        "tags": [
          "Transactions"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "transaction",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "amount": {
                  "type": "number"
                },
                "source": {
                  "type": "integer"
                },
                "active_from": {
                  "type": "string"
                },
                "account_id": {
                  "type": "integer"
                },
                "tag_ids": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  }
                },
                "description": {
                  "type": "string"
                }
              },
              "required": [
                "amount",
                "source",
                "active_from",
                "account_id"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "transaction created"
          },
          "422": {
            "description": "invalid request"
          }
        }
      }
    },
    "/transactions/{id}": {
      "get": {
        "summary": "Retrieves a transaction",
        "tags": [
          "Transactions"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "transaction found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "amount": {
                  "type": "number"
                },
                "source": {
                  "type": "string"
                },
                "active_from": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "amount",
                "source",
                "active_from"
              ]
            }
          },
          "404": {
            "description": "transaction not found"
          }
        }
      }
    }
  }
}